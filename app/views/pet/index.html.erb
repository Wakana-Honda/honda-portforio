 <%= render 'shared/aboutlink' %>

<div class="text-right">
 <%= link_to new_pet_path, method: :get, class:"btn btn-warning mr-3 my-3" do %>
  <i class="fas fa-paw"></i>
   ウチの子を登録する
  <i class="fas fa-chevron-right"></i>
 <% end %>
</div>
 

<div class = "container-lg">

<% @pets.each do |pet| %>

<div class ="border shadow pet_log my-3 bg-light">

<div class = "row">
 
 <div class = "col-sm-6">
  <div class = "mt-3 mx-3">
    <%= image_tag pet.get_pet_image(200,200),class:"rounded-circle mx-3" %>
    <div class = "row justify-content-center"> 
     <%= link_to edit_pet_path(pet) do %>
      <i class="fas fa-edit"></i>
     <% end %>
    </div>
  </div>
 
 <table class="table">
  <tr>
   <th>名前</th>
   <td><%= pet.name %></td>
  </trt>
  <tr>
   <th>年齢</th>
   <td>
   <% if pet.age == nil %>
     no date
   <% else %>
    <%= pet.age %>歳
   <% end %>
   </td>
  </tr>
  <tr>
   <th nowrap>誕生日</th>
   <td class = "btd">
    <% if pet.age == nil %>
     no date
    <% else %>
     <%= pet.birthday %>
    <% end %>
   </td>
  </tr>
  <tr>
   <th>性別</th>
   <td>
    <% if pet.age == nil %> 
     no date
    <% else %>  
     <%= pet.gender_i18n %>
    <% end %>
   </td>
  </tr>
  <tr>
   <th>メモ</th>
   <td><%= pet.memo %></td>
  </tr>
  <tr><th></th><td></td></tr>
 </table>
</div>

<div class = "col-sm-6">
 <div class = "h5 py-3 text-center"><span class = "liner">
  <i class="fas fa-paw"></i><%= pet.name %>ちゃんの記録<i class="fas fa-paw"></i>
  </span></div>
 
 <div class = "my-3"><%= pie_chart pet_foots_per(pet), suffix: "%" %></div>
</div>

</div>
</div>

<% end %>

</div>




